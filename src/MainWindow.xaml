<Window
    x:Class="TingenCommander.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TingenCommander"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tingen Commander"
    Width="900"
    Height="500"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid Margin="0,1,0,-1">

        <!--  Tingen Web Service  -->
        <!--  Tingen Web Service: Status light  -->

        <!--  Tingen Web Service: Header  -->
        <Label
            x:Name="lblTingen"
            Width="175"
            Height="46"
            Margin="49,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="center"
            BorderBrush="Black"
            BorderThickness="2"
            Content="Tingen"
            FontSize="22"
            FontWeight="Bold" />
        <Label
            x:Name="lblTingenStatusLight"
            Width="25"
            Height="32"
            Margin="37,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LawnGreen"
            BorderBrush="Black"
            BorderThickness="2"
            Content="" />

        <Label
            x:Name="lblTingenVersion"
            Width="150"
            Height="26"
            Margin="222,53,0,0"
            Padding="0,7,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Content="v00.00.00.00 [b000000.0000]"
            FontSize="10" />
        <Label
            x:Name="lblTingenVersionHeader"
            Width="100"
            Height="22"
            Padding="0,3,0,0"
            Margin="247,37,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="WhiteSmoke"
            BorderBrush="Black"
            BorderThickness="1"
            Content="VERSION"
            FontSize="10" />
        <Label
            x:Name="lblTingenLastUpdated"
            Width="150"
            Height="26"
            Margin="371,53,0,0"
            Padding="0,7,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Content="00/00/0000 00:00:00 AM"
            FontSize="10" />
        <Label
            x:Name="lblTingenLastUpdatedHeader"
            Width="100"
            Height="22"
            Padding="0,3,0,0"
            Margin="396,37,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Background="WhiteSmoke"
            BorderBrush="Black"
            BorderThickness="1"
            Content="LAST UPDATED"
            FontSize="10" />
    </Grid>
</Window>
