<Window
    x:Class="TingenCommander.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TingenCommander"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <!--  TabControl  -->
        <TabControl x:Name="TabControlMain" Margin="10,64,10,10">
            <TabItem
                x:Name="TabItemTingen"
                FontFamily="Cascadia Code"
                FontSize="16"
                Header="Tingen">
                <Grid Background="#FFFFFF">
                    <Label
                        x:Name="LableTingenDetailsLastUpdated"
                        Margin="140,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Last updated: June 18, 2024"
                        FontSize="10"
                        FontWeight="Normal"
                        Foreground="gray" />
                    <GroupBox
                        x:Name="GroupBoxTingenDetails"
                        Width="300"
                        Height="151"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Black"
                        Header="Details">
                        <Canvas>

                            <Label
                                x:Name="LableTingenModeHeader"
                                Canvas.Left="31"
                                Canvas.Top="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Tingen Mode:"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Button
                                x:Name="ButtonTingenMode"
                                Canvas.Left="130"
                                Canvas.Top="10"
                                Width="100"
                                Height="24"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content=""
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="LableTingenVersionHeader"
                                Canvas.Left="10"
                                Canvas.Top="39"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Tingen Version:"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="LabelTingenVersion"
                                Canvas.Left="130"
                                Canvas.Top="39"
                                Width="100"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="24.6.0"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="LableTingenBuildHeader"
                                Canvas.Left="24"
                                Canvas.Top="68"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Tingen Build:"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="LabelTingenBuild"
                                Canvas.Left="130"
                                Canvas.Top="68"
                                Width="100"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="240617.1159"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="LabelDiskFreeSpaceHeader"
                                Canvas.Left="3"
                                Canvas.Top="97"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Disk free space:"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="LabelDiskFreeSpaceValue"
                                Canvas.Left="130"
                                Canvas.Top="97"
                                Width="81"
                                Height="24"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Content="00GB"
                                FontSize="12"
                                FontWeight="Normal" />
                        </Canvas>
                    </GroupBox>
                    <GroupBox
                        x:Name="GroupBoxTraceLogs"
                        Width="300"
                        Height="146"
                        Margin="10,181,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Black"
                        Header="Trace logs">
                        <Canvas>
                            <Label
                                x:Name="LabelTraceLogLevelHeader"
                                Canvas.Left="10"
                                Canvas.Top="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="Trace log level:"
                                FontSize="12"
                                FontWeight="Normal" />
                            <ComboBox
                                x:Name="ComboBoxTraceLogLevel"
                                Canvas.Left="137"
                                Canvas.Top="12"
                                Width="62"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderTransformOrigin="0.419,1.219">
                                <ComboBoxItem Content="0" />
                                <ComboBoxItem Content="1" />
                                <ComboBoxItem Content="2" />
                                <ComboBoxItem Content="3" />
                                <ComboBoxItem Content="4" />
                                <ComboBoxItem Content="5" />
                                <ComboBoxItem Content="6" />
                                <ComboBoxItem Content="7" />
                                <ComboBoxItem Content="8" />
                                <ComboBoxItem Content="9" />
                            </ComboBox>
                            <Label
                                x:Name="LabelTraceLogDelayHeader"
                                Canvas.Left="10"
                                Canvas.Top="45"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Content="Trace log delay:"
                                FontSize="12"
                                FontWeight="Normal" />
                            <TextBox
                                x:Name="TextBoxTraceLogDelayValue"
                                Canvas.Left="137"
                                Canvas.Top="49"
                                Width="31"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="12"
                                Text="0"
                                TextWrapping="Wrap" />
                            <Button
                                x:Name="ButtonDeleteAllTraceLogs"
                                Canvas.Left="10"
                                Canvas.Top="86"
                                Width="268"
                                Height="24"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Click="ButtonDeleteAllTraceLogs_Click"
                                Content="Delete all trace logs"
                                FontSize="12"
                                FontWeight="Normal" />

                        </Canvas>

                    </GroupBox>
                    <GroupBox
                        x:Name="GroupBoxDataFiles"
                        Width="327"
                        Margin="315,10,0,318"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="bold"
                        Foreground="Black"
                        Header="Messages">
                        <Canvas>
                            <Label
                                x:Name="LabelExportedDataHeader"
                                Canvas.Left="391"
                                Canvas.Top="17"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Exported data (000 MB)"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Button
                                x:Name="ButtonViewExportedData"
                                Canvas.Left="427"
                                Canvas.Top="36"
                                Width="55"
                                Height="22"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="ButtonViewExportedData_Click"
                                Content="View"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Button
                                x:Name="ButtonArchiveExportedData"
                                Canvas.Left="501"
                                Canvas.Top="36"
                                Width="55"
                                Height="22"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Archive"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Label
                                x:Name="label"
                                Canvas.Left="10"
                                Canvas.Top="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Alerts (000 MB)"
                                FontSize="12"
                                FontWeight="Normal" RenderTransformOrigin="0.217,-0.453" />

                            <Button
                                x:Name="ButtonViewAlertMessages"
                                Canvas.Left="130"
                                Canvas.Top="10"
                                Width="55"
                                Height="22"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="ButtonViewAlertMessages_Click"
                                Content="View"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Button
                                x:Name="ButtonViewErrorMessages"
                                Canvas.Left="130"
                                Canvas.Top="37"
                                Width="86"
                                Height="22"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="ButtonViewErrorMessages_Click"
                                Content="View errors"
                                FontSize="12"
                                FontWeight="Normal" />
                            <Button
                                x:Name="ButtonViewWarningMessages"
                                Canvas.Left="130"
                                Canvas.Top="64"
                                Width="99"
                                Height="22"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="ButtonViewWarningMessages_Click"
                                Content="View warnings"
                                FontSize="12"
                                FontWeight="Normal" />

                        </Canvas>
                    </GroupBox>





                </Grid>
            </TabItem>
            <TabItem
                x:Name="TabItemLogs"
                FontSize="14"
                Header="TabItem">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
